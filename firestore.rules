
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Everyone (even without login) can read videos and surveys
    match /videos/{docId} {
      allow read: if true;
      allow write: if false; // Handled by backend logic/admin
    }
    
    match /surveys/{docId} {
      allow read: if true;
      allow write: if request.auth != null; // Checked by admin verification flow
    }

    // Admin verification codes
    match /adminCodes/{docId} {
      allow read: if request.auth != null;
      allow write: if false;
    }

    // Admins collection - each admin can only read/write their own record
    match /admins/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // ðŸ”‘ Normal users collection (with subcollections)
    match /users/{userId} {
      // User can only access their own document
      allow read, write, delete: if request.auth != null && request.auth.uid == userId;

      // notes subcollection
      match /notes/{noteId} {
        allow read, write, delete: if request.auth != null && request.auth.uid == userId;
      }

      // journal subcollection (contains 'state' document)
      match /journal/{docId=**} {
        allow read, write, delete: if request.auth != null && request.auth.uid == userId;
      }
    }
  }
}
