
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
  
    // Default deny all reads and writes
    match /{document=**} {
      allow read, write: if false;
    }

    // Allow logged-in users to read documents in the 'config' collection
    match /config/{docId} {
      allow read: if request.auth != null;
      allow write: if false; // Keep config writes locked down
    }
    
    // Allow users to read and write to their own user document
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Allow logged-in users to read general app collections like announcements, surveys, etc.
    match /announcements/{docId} {
      allow read: if request.auth != null;
    }
    match /surveys/{docId} {
      allow read: if request.auth != null;
    }
    match /videos/{docId} {
        allow read: if request.auth != null;
    }
    match /bannedUsers/{docId} {
        allow read: if request.auth != null; // Admin logic will handle who can see/use this
    }
  }
}
