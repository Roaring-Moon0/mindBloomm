rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Public collections
    match /videos/{docId} {
      allow read: if true;
      allow write: if false; // Only admins should write, handled by backend logic
    }
    
    // Admin & Config collections
    match /adminCodes/{docId} {
      allow read: if request.auth != null; // Checked by admin verification flow
    }
    match /admins/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    match /surveys/{docId} {
      allow read: if true; // Public can read surveys
      allow write: if request.auth != null; // Checked by admin verification flow
    }

    // USER-SPECIFIC DATA
    match /users/{userId} {
      // Users can read/write their own top-level document.
      allow read, update, delete: if request.auth != null && request.auth.uid == userId;
      // New users can create their own document.
      allow create: if request.auth != null;

      // Rule for the 'notes' subcollection
      match /notes/{noteId} {
        allow read, write, delete: if request.auth != null && request.auth.uid == userId;
      }
      
      // Rule for the 'journal' subcollection (e.g., /journal/state)
      match /journal/{doc=**} {
        allow read, write, delete: if request.auth != null && request.auth.uid == userId;
      }
    }
  }
}
