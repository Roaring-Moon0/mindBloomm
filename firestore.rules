rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Public collections can be read by anyone
    match /videos/{docId} {
      allow read: if true;
      allow write: if false; 
    }
    match /surveys/{docId} {
      allow read: if true;
      allow write: if request.auth != null; // Checked by admin verification flow
    }
    
    // Admin collections
    match /adminCodes/{docId} {
      allow read: if request.auth != null; // Checked by admin verification flow
    }
    match /admins/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // --- USER-SPECIFIC DATA ---
    // A user can read/write to their own user document.
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // A user can manage all documents within their own 'notes' subcollection.
    match /users/{userId}/notes/{noteId} {
      allow read, write, delete: if request.auth != null && request.auth.uid == userId;
    }

    // A user can manage all documents within their own 'journal' subcollection (e.g., the 'state' document).
    match /users/{userId}/journal/{docId} {
       allow read, write, delete: if request.auth != null && request.auth.uid == userId;
    }
  }
}
