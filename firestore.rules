rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Allow authenticated users to read public configuration
    match /config/{docId} {
      allow read: if request.auth != null;
    }
    
    // Allow authenticated users to read surveys
    match /surveys/{surveyId} {
      allow read: if request.auth != null;
    }

    // Allow admin users to read/write admin-only collections
    match /admins/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    match /adminCodes/{codeId} {
      allow read: if request.auth != null; // Checked in backend logic
    }
    
    // ðŸŒ³ Gratitude Tree Journal Rules
    // Each user can only read/write their own journal data
    match /users/{userId}/{document=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
