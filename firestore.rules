
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /users/{userId} {
      // Users can only create, read, or update their own document
      allow read, update, create: if request.auth != null && request.auth.uid == userId;
    }
    match /config/{docId} {
      // Allow anyone to read config documents (e.g., for the survey URL)
      allow read: if true;
    }
  }
}
