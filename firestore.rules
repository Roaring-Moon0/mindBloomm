rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Allow public read access to the 'videos' collection
    match /videos/{docId} {
      allow read: if true;
      allow write: if false;
    }

    // Surveys collection - allow authenticated users to read/write
    match /surveys/{docId} {
      allow read, write: if request.auth != null;
    }

    // Admin verification codes
    match /adminCodes/{docId} {
      allow read: if request.auth != null;
      allow write: if false;
    }

    // Admins collection - each admin can read/write only their own record
    match /admins/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Announcements collection - allow authenticated read/write
    match /announcements/{docId} {
      allow read, write: if request.auth != null;
    }

    // Config collection - allow authenticated read/write
    match /config/{docId} {
      allow read, write: if request.auth != null;
    }

    // --- Correct User Data Rule ---
    // Grants a logged-in user access to their own user document AND all sub-collections within it (e.g., 'entries', 'journal/state').
    match /users/{userId}/{document=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
