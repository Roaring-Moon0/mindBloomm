
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Allow logged-in users to read/write their own data in the 'users' collection
    match /users/{userId}/{documents=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Allow any authenticated user to read public collections like 'surveys'
    match /surveys/{surveyId} {
      allow read: if request.auth != null;
    }

    // Allow admins to read/write admin-only collections
    match /admins/{adminId} {
      allow read, write: if get(/databases/$(database)/documents/admins/$(request.auth.uid)).data.email == request.auth.email;
    }
    
    match /adminCodes/{codeId} {
      allow read, write: if get(/databases/$(database)/documents/admins/$(request.auth.uid)).data.email == request.auth.email;
    }
  }
}
