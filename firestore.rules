rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Allow logged-in users to read from public collections like 'surveys'
    match /surveys/{surveyId} {
      allow read: if request.auth != null;
    }

    // Allow logged-in users to read from public config
    match /config/{docId} {
        allow read: if request.auth != null;
    }
    
    // Allow admins to manage admin codes
    match /adminCodes/{codeId} {
      allow read, write: if request.auth != null && exists(/databases/$(database)/documents/admins/$(request.auth.uid));
    }

    // ðŸŒ³ Gratitude Tree Journal Rules
    // Each user can only read/write their own journal data
    match /users/{userId}/{document=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
  }
}