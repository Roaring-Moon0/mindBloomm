rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Allow public read access to the 'videos' collection
    match /videos/{docId} {
      allow read: if true;
      allow write: if false;
    }

    // Surveys collection - allow admins to read/write
    match /surveys/{docId} {
      allow read, write: if request.auth != null;
    }

    // Admin verification codes
    match /adminCodes/{docId} {
      allow read: if request.auth != null;
      allow write: if false;
    }

    // Admins collection - each admin can read/write only their own record
    match /admins/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Normal users collection
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;

      // âœ… Add access for notes subcollection
      match /notes/{noteId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }

    // Announcements collection - allow admin read/write
    match /announcements/{docId} {
      allow read, write: if request.auth != null;
    }

    // Config collection - allow admins read/write
    match /config/{docId} {
      allow read, write: if request.auth != null;
    }
  }
}